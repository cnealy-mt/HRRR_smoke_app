library(dplyr)
library(ggplot2)

# Filter for Flathead County
plot_data <- hourly_model_performance %>%
  filter(county == "Flathead")

# Plot VENT_RATE vs fcst_hour
ggplot(plot_data, aes(x = fcst_hour, y = VENT_RATE)) +
  geom_line(color = "steelblue", size = 1) +
  geom_point(color = "darkblue", size = 2) +
  labs(
    title = "Ventilation Rate Forecast - Flathead County",
    x = "Forecast Hour",
    y = "Ventilation Rate (m^2/s)"
  ) +
  theme_minimal()

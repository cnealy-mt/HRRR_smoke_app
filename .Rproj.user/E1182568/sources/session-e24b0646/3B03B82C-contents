library(dplyr)
library(ggplot2)

# Filter for one site (e.g., "Missoula")
site_plot_data <- model_performance %>%
  filter(site_name == "Great Falls")

# Plot
ggplot(site_plot_data, aes(x = timestamp_MDT)) +
  geom_line(aes(y = sample_measurement, color = "Observed PM2.5")) +
  geom_line(aes(y = smoke_ug_m3, color = "Modeled Smoke PM2.5")) +
  labs(
    title = "PM2.5 vs. Modeled Smoke PM2.5",
    x = "Time (MDT)",
    y = "PM2.5 (µg/m³)",
    color = "Legend"
  ) +
  theme_minimal()
